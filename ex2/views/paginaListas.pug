extends layout

block content
    .w3-card-4
        header.w3-container.w3-teal
            h1
                span Listas

        .w3-container
            table.w3-table-all
                tr
                    th id
                    th Designacao
                    th data
                    th #produtos

                    

                each lista in listas
                    - var totalProdutos = 0
                    each prod in lista.produtos
                        - totalProdutos += 1
                    tr
                        td
                            a(href="/" + lista._id)= lista._id
                        td= lista.designacao
                        td= lista.data
                        td #{totalProdutos}